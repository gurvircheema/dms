<h3>Load Confirmation</h3>
<p><b>Carrier:</b> <%= @load.vendor.internal_name %></p>
<p><b>Load Number:</b> <%= @load.id %></p>
<h4>Picks</h4>
<table cellspacing='0'>
  <tr>
    <th class='border'>Name</th>
    <th class='border'>Address</th>
  </tr>
  <% @load.pickup_locations.each do |pickup| %>
    <tr>
      <td class='border'><%= pickup.location.name %></td>
      <td class='border'><%= pickup.location.address.full_address %></td>
    </tr>
  <% end %>
</table>

<h4>Drops</h4>
<table cellspacing='0'>
  <tr>
    <th class='border'>Name</th>
    <th class='border'>Address</th>
  </tr>
  <% @load.drop_locations.each do |drop| %>
    <tr>
      <td class='border'><%= drop.location.name %></td>
      <td class='border'><%= drop.location.address.full_address %></td>
    </tr>
  <% end %>
</table>

<style>
  html, body {
    font-family: Arial, sans-serif;
  }

  .border {
    border: 1px solid black;
  }

  table {
    border-collapse: collapse;
  }

  h4 {
    margin: 10px 0;
  }

  p {
    margin: 0;
    padding: 0;
  }
  th, td {
    padding: 5px 10px;
  }
</style>