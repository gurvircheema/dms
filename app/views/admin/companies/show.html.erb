<h4 class='mt-2 pt-2'>Company: <%= @company.name %></h4>
<div class='row'>
  <div class='col-md-4'>
    <dl class='row'>
      <dt class='col-sm-4'>Address</dt>
      <dd class='col-sm-8'>
        <div><%= @company.address %></div>
        <div><%= @company.city %>, <%= @company.province %></div>
        <div><%= @company.country %></div>
        <div><%= @company.zip %></div>
      </dd>

      <dt class='col-sm-4'>Phone</dt>
      <dd class='col-sm-8'><%= @company.phone %></dd>

      <dt class='col-sm-4'>Toll Free</dt>
      <dd class='col-sm-8'><%= @company.toll_free %></dd>

      <dt class='col-sm-4'>Fax</dt>
      <dd class='col-sm-8'><%= @company.fax %></dd>

      <dt class='col-sm-4'>Email</dt>
      <dd class='col-sm-8'><%= @company.email %></dd>

      <dt class='col-sm-4'>Is Customer</dt>
      <dd class='col-sm-8'><%= @company.is_customer %></dd>

      <dt class='col-sm-4'>Is Carrier</dt>
      <dd class='col-sm-8'><%= @company.is_carrier %></dd>

      <dt class='col-sm-4'>Billing Address</dt>
      <dd class='col-sm-8'>
        <div><%= @company.billing_address %></div>
        <div><%= @company.billing_city %>, <%= @company.billing_province %></div>
        <div><%= @company.billing_country %></div>
        <div><%= @company.billing_zip %></div>
      </dd>
    </dl>
    <%= link_to 'Back', [:admin, :companies], class: 'btn btn-sm btn-secondary' %>
    <%= link_to 'Edit', [:edit, :admin, @company], class: 'btn btn-sm btn-outline-danger' %>
  </div>
  <div class='col-md-4'>
    Locations
  </div>
  <div class='col-md-4'>
    Safety Compliances
  </div>
</div>
