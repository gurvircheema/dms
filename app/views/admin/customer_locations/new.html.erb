<%= simple_form_for([:admin, @customer, @customer_location], html: { class: 'form' }) do |f| %>
  <%= f.input :location_id, collection: Location.all.collect { |f| [f.dropdown_list_item, f.id] } %>
  <%= f.submit 'Submit', class: 'btn btn-sm btn-primary' %>
  <%= link_to 'Cancel', [:admin, @customer], class: 'btn btn-sm btn-secondary' %>
<% end %>