<h4 class='mt-3 pb-3'>Driver Information <small class='text-muted'><%= @driver.name %></small></h4>
<div class='row'>
  <div class='col-md-4'>
    <table class='table table-sm table-bordered'>
      <tr>
        <td>Name</td>
        <td><%= @driver.name %></td>
      </tr>
      <tr>
        <td>Address</td>
        <td><%= @driver.address %></td>
      </tr>
      <tr>
        <td>City</td>
        <td><%= @driver.city %></td>
      </tr>
      <tr>
        <td>State</td>
        <td><%= @driver.state %></td>
      </tr>
      <tr>
        <td>Country</td>
        <td><%= @driver.country %></td>
      </tr>
      <tr>
        <td>Zip</td>
        <td><%= @driver.zip %></td>
      </tr>
      <tr>
        <td>Phone</td>
        <td><%= @driver.phone %></td>
      </tr>
      <tr>
        <td>Cell</td>
        <td><%= @driver.cell %></td>
      </tr>
      <tr>
        <td>Email</td>
        <td><%= @driver.email %></td>
      </tr>
      <tr>
        <td>Status Active</td>
        <td><%= @driver.active %></td>
      </tr>
      <tr>
        <td>Date of Birth</td>
        <td><%= @driver.date_of_birth %></td>
      </tr>
      <tr>
        <td>Ability to work</td>
        <td><%= @driver.ability_to_work %></td>
      </tr>
      <tr>
        <td>Driver Type</td>
        <td><%= @driver.driver_type %></td>
      </tr>
    </table>
  </div>
  <div class='col-md-4'>
    <div class='row'>
      <div class='col-md-12 small'>
        <div class='d-flex justify-content-between'>
          <h4>Ticket Violations</h4>
          <div class='float-right'>
            <%= link_to 'Add new violation', [:new, :admin, @driver, :violation_ticket], class: 'btn btn-sm btn-primary', data: { modal: true } %>
          </div>
        </div>
        <table class='table table-sm'>
          <thead>
            <tr>
              <th class='small'>Vehicle Act</th>
              <th class='small'>Description</th>
              <th class='small'>Fine Amount</th>
              <th class='small'>Points</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @violation_tickets.each do |violation| %>
              <tr>
                <td><%= violation.motor_vehicle_act_section %></td>
                <td><%= violation.description %></td>
                <td><%= violation.fine_amount %></td>
                <td><%= violation.points_deducted %></td>
                <td><%= link_to 'Show', [:admin, @driver, violation], class: 'btn-link' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class='col-md-4'>
    <div class='row'>
      <div class='col-md-12 small'>
        <%= link_to 'Add License', [:new, :admin, @driver, :license], class: 'btn btn-sm btn-primary' %>
      </div>
    </div>
    <div class='row'>
      <table class='table table-sm small'>
        <thead>
          <tr>
            <th>Number</th>
            <th>Issue Date</th>
            <th>Expiry Date</th>
            <th>Restrictions</th>
            <th>Province</th>
          </tr>
        </thead>
        <tbody>
          <% @driver.licenses.each do |license| %>
            <tr>
              <td><%= link_to license.number, [:admin, @driver, license], class: 'btn-link' %></td>
              <td><%= license.issue_date %></td>
              <td><%= license.expiry_date %></td>
              <td><%= license.restrictions %></td>
              <td><%= license.province %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= link_to 'Back', [:admin, :drivers], class: 'btn btn-secondary' %>
<%= link_to 'Edit', [:edit, :admin, @driver], class: 'btn btn-outline-primary' %>
