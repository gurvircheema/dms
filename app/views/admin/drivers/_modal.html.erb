<%= simple_form_for([:admin, @driver], html: { class: 'form' }) do |f| %>
  <div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Add License</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
    <div class='row'>
      <div class='col-md-6'>
        <div class='form-group'>
          <%= f.input :name, class: 'form-control' %>
        </div>
        <%= f.simple_fields_for :address do |a| %>
          <%= render 'shared/address_fields', ff: a %>
        <% end %>
      </div>
      <div class='col-md-6'>
        <div class='row'>
          <div class='col-md-6'>
            <div class='form-group'>
              <%= f.input :phone, class: 'form-control' %>
            </div>
          </div>
          <div class='col-md-6'>
            <div class='form-group'>
              <%= f.input :cell, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class='form-group'>
          <%= f.input :email, class: 'form-control' %>
        </div>
        <div class='row'>
          <div class='col-md-6'>
            <div class='form-group'>
              <%= f.label :date_of_birth %>
              <%= f.date_field :date_of_birth, class: 'form-control' %>
            </div>
          </div>
          <div class='col-md-6'>
            <div class='form-group'>
              <%= f.input :active, collection: [true, false], selected: true, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class='row'>
          <div class='col-md-6'>
            <div class='form-group'>
              <%= f.input :immigration_status, collection: Driver.immigration_statuses.keys, selected: 'Citizenship', class: 'form-control' %>
            </div>
          </div>
          <div class='col-md-6'>
            <div class='form-group'>
              <%= f.input :driver_type, collection: Driver.driver_types.keys, selected: 'Company Driver', class: 'form-control' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit 'Submit', class: 'btn btn-sm btn-primary' %>
    <%= link_to 'Cancel', back_url(@driver), class: 'btn btn-sm btn-secondary' %>
  </div>
<% end %>