<div class='row'>
  <div class='col-md-6'>
    <div class='form-group'>
      <%= f.input :name, class: 'form-control' %>
    </div>
    <%= f.simple_fields_for :address do |a| %>
      <%= render 'shared/address_fields', ff: a %>
    <% end %>
    <%= f.submit 'Submit', class: 'btn btn-sm btn-primary' %>
    <%= link_to 'Cancel', [:admin, :drivers], class: 'btn btn-sm btn-secondary' %>
  </div>
  <div class='col-md-6'>
    <div class='row'>
      <div class='col-md-6'>
        <div class='form-group'>
          <%= f.input :phone, class: 'form-control' %>
        </div>
      </div>
      <div class='col-md-6'>
        <div class='form-group'>
          <%= f.input :cell, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class='form-group'>
      <%= f.input :email, class: 'form-control' %>
    </div>
    <div class='row'>
      <div class='col-md-6'>
        <div class='form-group'>
          <%= f.label :date_of_birth %>
          <%= f.date_field :date_of_birth, class: 'form-control' %>
        </div>
      </div>
      <div class='col-md-6'>
        <div class='form-group'>
          <%= f.input :active, collection: [true, false], selected: true, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class='row'>
      <div class='col-md-6'>
        <div class='form-group'>
          <%= f.input :immigration_status, collection: Driver.immigration_statuses.keys, selected: 'Citizenship', class: 'form-control' %>
        </div>
      </div>
      <div class='col-md-6'>
        <div class='form-group'>
          <%= f.input :driver_type, collection: Driver.driver_types.keys, selected: 'Company Driver', class: 'form-control' %>
        </div>
      </div>
    </div>
  </div>
</div>
