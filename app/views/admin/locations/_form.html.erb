<%= simple_form_for([:admin, @customer, @location], html: { class: 'form', require: false }, wrapper: :vertical_form ) do |f| %>
  <div class='row'>
    <div class='col-md-6'>
      <%= f.input :name %>
      <%= f.input :address %>
      <div class='row'>
        <div class='col-md-8'>
          <%= f.input :city %>
        </div>
        <div class='col-md-4'>
          <%= f.input :province %>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-6'>
          <%= f.input :country, collection: ['Canada', 'US'] %>
        </div>
        <div class='col-md-6'>
          <%= f.input :zip %>
        </div>
      </div>
      <%= f.submit 'Submit', class: 'btn btn-primary' %>
      <%= link_to 'Cancel', [:admin, @customer], class: 'btn btn-secondary' %>
    </div>
    <div class='col-md-6'>
      <div class='row'>
        <div class='col-md-6'>
          <%= f.input :contact %>
        </div>
        <div class='col-md-6'>
          <%= f.input :email %>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-4'>
          <%= f.input :phone %>
        </div>
        <div class='col-md-4'>
          <%= f.input :toll_free %>
        </div>
        <div class='col-md-4'>
          <%= f.input :fax %>
        </div>
      </div>
      <%= f.input :loading_info %>
      <%= f.input :receiving_info %>
      <%= f.input :additional_info %>
    </div>
  </div>
<% end %>
