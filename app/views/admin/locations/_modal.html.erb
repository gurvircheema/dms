<%= simple_form_for([:admin, @location], html: { class: 'form', require: false }, wrapper: :vertical_form ) do |f| %>
   <div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Add New Equipment</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
    <div class='row'>
      <div class='col-md-6'>
        <%= f.input :name %>
        <%= f.simple_fields_for :address do |la| %>
          <%= render 'shared/address_fields', ff: la %>
        <% end %>
      </div>
      <div class='col-md-6'>
        <div class='row'>
          <div class='col-md-6'>
            <%= f.input :contact %>
          </div>
          <div class='col-md-6'>
            <%= f.input :email %>
          </div>
        </div>
        <div class='row'>
          <div class='col-md-4'>
            <%= f.input :phone %>
          </div>
          <div class='col-md-4'>
            <%= f.input :toll_free %>
          </div>
          <div class='col-md-4'>
            <%= f.input :fax %>
          </div>
        </div>
        <%= f.input :loading_info %>
        <%= f.input :receiving_info %>
        <%= f.input :additional_info %>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit 'Submit', class: 'btn btn-sm btn-primary' %>
    <%= link_to 'Cancel', back_url(@location), class: 'btn btn-sm btn-secondary' %>
  </div>
<% end %>
