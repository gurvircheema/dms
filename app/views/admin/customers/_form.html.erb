<%= simple_form_for([:admin, @customer], html: { class: 'form' }) do |f| %>
  <div class='row'>
    <div class='col-md-8'>
      <%= f.input :name %>
      <div class='row'>
        <div class='col-md-6'>
          <div class='secondary-header'>Primary Address</div>
          <%= f.simple_fields_for :address do |a| %>
            <%= render 'shared/address_fields', ff: a %>
          <% end %>
          <%= label_tag 'Billing address is same as main address' %>
          <%= check_box_tag 'same_billing_address' %>
        </div>
        <div class='col-md-6'>
          <div class='secondary-header'>Billing Address</div>
          <%= f.simple_fields_for :billing_address do |a| %>
            <%= render 'shared/address_fields', ff: a %>
          <% end %>
        </div>
      </div>
    </div>
    <div class='col-md-4'>
      <%= f.input :phone %>
      <%= f.input :toll_free %>
      <%= f.input :fax %>
      <%= f.input :email %>
    </div>
  </div>
  <%= f.submit 'Submit', class: 'btn btn-sm btn-primary' %>
  <%= link_to 'Cancel', back_url(@customer), class: 'btn btn-sm btn-secondary' %>
<% end %>