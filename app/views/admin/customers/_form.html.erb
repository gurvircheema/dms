<%= simple_form_for([:admin, @customer], html: { class: 'form' }) do |f| %>
  <div class='row'>
    <div class='col-md-8'>
      <%= f.input :name %>
      <div class='row'>
        <div class='col-md-6'>
          <%= f.input :address %>
          <div class='row'>
            <div class='col-md-8'>
              <%= f.input :city %>
            </div>
            <div class='col-md-4'>
              <%= f.input :province %>
            </div>
          </div>
          <div class='row'>
            <div class='col-md-6'>
              <%= f.input :country, collection: ['Canada', 'US'] %>
            </div>
            <div class='col-md-6'>
              <%= f.input :zip %>
            </div>
          </div>
          <%= label_tag 'Billing address is same as main address' %>
          <%= check_box_tag 'same_billing_address' %>
        </div>
        <div class='col-md-6'>
          <%= f.input :billing_address %>
          <div class='row'>
            <div class='col-md-8'>
              <%= f.input :billing_city %>
            </div>
            <div class='col-md-4'>
              <%= f.input :billing_province %>
            </div>
          </div>
          <div class='row'>
            <div class='col-md-6'>
              <%= f.input :billing_country, collection: ['Canada', 'US'] %>
            </div>
            <div class='col-md-6'>
              <%= f.input :billing_zip %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class='col-md-4'>
      <%= f.input :phone %>
      <%= f.input :toll_free %>
      <%= f.input :fax %>
      <%= f.input :email %>
    </div>
  </div>
  <%= f.submit 'Submit', class: 'btn btn-sm btn-primary' %>
  <%= link_to 'Cancel', [:admin, :customers], class: 'btn btn-sm btn-secondary' %>
<% end %>