<% content_for :topbar_heading do %>
  Customers
<% end %>
<% content_for :topbar_buttons do %>
  <%= link_to 'Add Customer', [:new, :admin, :customer], class: 'btn btn-sm btn-primary align-self-center' %>
<% end %>
<%= render 'admin/shared/topbar' %>
<div class='table-responsive small'>
  <table class='table table-sm table-bordered'>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Address</th>
        <th>City</th>
        <th>Province</th>
        <th>Country</th>
        <th>Zip</th>
        <th>Phone</th>
        <th>Fax</th>
        <th>Email</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= customer.name %></td>
          <td><%= customer.primary_address.address_line_1 %></td>
          <td><%= customer.primary_address.city %></td>
          <td><%= customer.primary_address.state_province %></td>
          <td><%= customer.primary_address.country %></td>
          <td><%= customer.primary_address.zipcode %></td>
          <td><%= customer.phone %></td>
          <td><%= customer.fax %></td>
          <td><%= customer.email %></td>
          <td><%= link_to 'Show', [:admin, customer], class: 'btn btn-xs btn-outline-primary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
