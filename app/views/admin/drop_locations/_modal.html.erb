<%= simple_form_for([:admin, @load, @drop_location], html: { class: 'form' }) do |f| %>
  <div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Add new Pickup Location</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
    <%= render 'admin/drop_locations/input_fields', f: f %>
  </div>
  <div class="modal-footer">
    <%= f.submit 'Submit', class: 'btn btn-sm btn-primary' %>
    <%= link_to 'Back', [:admin, @load], class: 'btn btn-sm btn-secondary' %>
  </div>
<% end %>