<% content_for :topbar_heading do %>
  Driving License
<% end %>
<% content_for :topbar_buttons do %>
  <%= link_to 'Edit', [:edit, :admin, @driver, @license], class: 'btn btn-sm btn-danger' %>
  <%= link_to 'Back', [:admin, @driver], class: 'btn btn-sm btn-secondary' %>
<% end %>
<%= render 'admin/shared/topbar' %>
<%= simple_form_for([:admin, @driver, @license]) do |f| %>
  <%= f.input :number, readonly: true %>
  <%= f.input :issue_date, readonly: true %>
  <%= f.input :expiry_date, readonly: true %>
  <%= f.input :restrictions, readonly: true %>
  <%= f.input :province, collection: State.list.keys, selected: @license.province, readonly: true %>
  <%= f.input :driver, collection: Driver.all, selected: @driver, readonly: true %>
<% end %>
<%= link_to 'Back', [:admin, @driver], class: 'btn btn-secondary' %>
<%= link_to 'Edit', [:edit, :admin, @driver, @license], class: 'btn btn-danger' %>
